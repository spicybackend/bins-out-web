<style>
  /* Hero Section */
  .hero {
    padding: 100px 0 80px;
    text-align: center;
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 56px;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    margin-bottom: 24px;
  }

  .marker-underline {
    position: relative;
    display: inline-block;
  }

  .marker-underline::after {
    content: '';
    position: absolute;
    left: -8px;
    right: -8px;
    bottom: 4px;
    height: 10px;
    background: linear-gradient(135deg, #9333ea, #c084fc);
    border-radius: 20px;
    opacity: 0.8;
    z-index: -1;
    transform: rotate(-3deg);

    @media (max-width: 768px) {
      bottom: 2px;
      height: 8px;
    }
  }

  .hero-subtitle {
    font-size: 20px;
    line-height: 1.5;
    color: var(--text-secondary);
    margin-bottom: 40px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    margin-bottom: 80px;
  }

  /* App Preview */
  .app-preview {
    max-width: 400px;
    margin: 0 auto;
  }

  .app-mockup {
    background: var(--bg-secondary);
    border-radius: 24px;
    padding: 32px;
    box-shadow: 0 8px 32px var(--shadow-medium);
    border: 1px solid var(--border-color);
  }

  .mockup-header {
    text-align: center;
    margin-bottom: 24px;
  }

  .mockup-notch {
    width: 120px;
    height: 4px;
    background-color: var(--text-primary);
    border-radius: 2px;
    margin: 0 auto;
  }

  .mockup-content {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .mockup-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    background-color: var(--bg-primary);
    border-radius: 12px;
    border: 1px solid var(--border-color);
  }

  .mockup-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
  }

  .mockup-info {
    flex: 1;
  }

  .mockup-title {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 2px;
    font-size: 16px;
  }

  .mockup-subtitle {
    font-size: 14px;
    color: var(--text-muted);
  }

  /* Features Section */
  .features-section {
    padding: 120px 0;
    background-color: var(--bg-secondary);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 48px;
    max-width: 900px;
    margin: 0 auto;
  }

  .feature-item {
    text-align: center;
  }

  .feature-icon {
    width: 56px;
    height: 56px;
    margin: 0 auto 20px;
    background-color: var(--bg-primary);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    border: 1px solid var(--border-color);
  }

  .feature-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 8px;
  }

  .feature-description {
    font-size: 16px;
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0;
  }

  /* CTA Section */
  .cta-section {
    padding: 120px 0;
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 40px;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 16px;
    letter-spacing: -0.02em;
  }

  .cta-subtitle {
    font-size: 18px;
    color: var(--text-secondary);
    margin-bottom: 32px;
    line-height: 1.5;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 40px;
    }

    .hero-subtitle {
      font-size: 18px;
    }

    .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }

    .app-mockup {
      padding: 24px;
    }

    .cta-content h2 {
      font-size: 32px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 80px 0 60px;
    }

    .hero h1 {
      font-size: 32px;
    }

    .hero-subtitle {
      font-size: 16px;
    }

    .features-section {
      padding: 80px 0;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .cta-section {
      padding: 80px 0;
    }

    .cta-content h2 {
      font-size: 28px;
    }

    .app-mockup {
      padding: 20px;
    }

    .mockup-item {
      padding: 12px;
    }
  }
</style>
